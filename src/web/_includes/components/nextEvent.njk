{% macro nextEvent(event) %}
    <div class="font-sans py-4 pl-4 mx-auto sm:mx-0">
        <div class="font-bold text-2xl md:text-3xl px-2 py-1">
            {{ event.name }}
        </div>
        <div class="px-2 py-1">
            Date:
            <span class="font-bold">{{ event.date }}</span>
        </div>
        <div class="px-2 py-1">
            Time:
            <span class="font-bold">{{ event.time }}</span>
        </div>
        <div class="p-2">
            Details:
            <span class="font-bold"><a class="no-underline" href="{{ event.link }}">{{ event.link }}</a></span>
        </div>
    </div>
{% endmacro %}